<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/verify_header_lay"
        layout="@layout/header_lay" />

    <ScrollView
        android:id="@+id/scroll_lay"
        android:layout_below="@id/verify_header_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/verify_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/verify_card_card1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_back_shade"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/verify_card_card1_thumb"
                                android:layout_width="45dp"
                                android:layout_height="30dp"
                                android:src="@drawable/card" />

                            <ImageView
                                android:id="@+id/verify_card_card1_finished"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/hook"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="上传身份证正面"
                            android:textColor="@color/chutou_txt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/verify_card_card2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_back_shade"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/verify_card_card2_thumb"
                                android:layout_width="45dp"
                                android:layout_height="30dp"
                                android:src="@drawable/card" />

                            <ImageView
                                android:id="@+id/verify_card_card2_finished"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/hook"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=" 上传身份证反面"
                            android:textColor="@color/chutou_txt" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_card_card3"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/item_back_shade"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/verify_card_card3_thumb"
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:src="@drawable/card" />
                        <ImageView
                            android:id="@+id/verify_card_card3_finished"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/hook"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="上传手持身份证照片"
                        android:textColor="@color/chutou_txt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_name_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="真实姓名"

                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:enabled="true"
                        android:hint="填写姓名" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_num_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="身份证号"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:enabled="true"
                        android:hint="填写18位身份证号" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_add_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="住址"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_add_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:enabled="true"
                        android:hint="填写户口所在地" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/verify_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/verify_bank_card1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_back_shade"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/verify_bank_card1_thumb"
                                android:layout_width="45dp"
                                android:layout_height="30dp"
                                android:src="@drawable/card" />

                            <ImageView
                                android:id="@+id/verify_bank_card1_finished"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/hook"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="上传银行卡正面"
                            android:textColor="@color/chutou_txt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/verify_bank_card2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_back_shade"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/verify_bank_card2_thumb"
                                android:layout_width="45dp"
                                android:layout_height="30dp"
                                android:src="@drawable/card" />

                            <ImageView
                                android:id="@+id/verify_bank_card2_finished"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/hook"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=" 上传银行卡反面"
                            android:textColor="@color/chutou_txt" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_bank_name_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="银行名称"
                        android:textColor="@color/chocolate" />

                   <!-- <EditText
                        android:id="@+id/verify_bank_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写银行名称" />-->
                    <Spinner
                        android:id="@+id/verify_bank_name_sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                         />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_owner_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="持卡人姓名"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_owner_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写持卡人姓名" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_bank_cardnum_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="银行卡号"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_bank_cardnum_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:inputType="number"
                        android:layout_marginTop="5dp"
                        android:hint="填写银行卡号" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_b_bank_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="分行名称"
                        android:textColor="@color/chocolate" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <EditText
                        android:id="@+id/verify_b_bank_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="搜索支行名称" />
                    </LinearLayout>
                </LinearLayout>
                <ListView
                    android:id="@+id/verify_b_bank_lv"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    />
                <LinearLayout
                    android:id="@+id/verify_b_bank_num_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="联行号"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_b_bank_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写联行号" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/verify_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/verify_account_name_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="账号"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_account_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写登录账号" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_pw_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="账户密码"

                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_pw_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:inputType="textPassword"
                        android:layout_marginTop="5dp"
                        android:hint="输入账户密码" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_merchant_name_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="商户名称"
                        android:textColor="@color/chocolate" />
                    <EditText
                        android:id="@+id/verify_merchant_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写商户名称" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_contact_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="联系人"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_contact_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写联系人名字" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_contact_phone_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="联系人电话"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_contact_phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:inputType="phone"
                        android:hint="填写联系人电话" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/verify_dis_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="地区"
                        android:textColor="@color/chocolate" />
                    <TextView
                        android:id="@+id/verify_dis_tv"
                        android:layout_width="match_parent"
                        android:gravity="center|left"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/verify_province_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="省份"
                        android:textColor="@color/chocolate" />
                    <Spinner
                        android:id="@+id/verify_province_sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_city_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="城市"
                        android:textColor="@color/chocolate" />
                    <Spinner
                        android:id="@+id/verify_city_sp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_now_add_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="住址"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_now_add_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="填写联系人当前住址" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verify_invite_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="邀请码"
                        android:textColor="@color/chocolate" />

                    <EditText
                        android:id="@+id/verify_invite_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:hint="邀请码(选填)" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/verify_do_lay"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/big_btn_backgroud"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/verify_commit_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/next_step" />

        <ImageView
            android:id="@+id/verify_card_rotate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
